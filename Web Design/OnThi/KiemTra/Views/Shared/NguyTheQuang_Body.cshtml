@model IEnumerable<HangHoa>

<div class="main">
    <div class="content">
        <!-- Begin New Product -->
        <div class="content_top">
            <div class="heading">
                <h3>New Products</h3>
            </div>
            <div class="see">
                <p><a href="#">See all Products</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group" id="contentLocTheoHangHoa">
            @foreach (var item in Model)
            {
                @if (item.Gia > 1000)
                {
                    <div class="grid_1_of_4 images_1_of_4">
                        <a href="preview.html"><img src="~/images/@item.Anh" alt="" /></a>
                        <h2>@item.TenHang</h2>
                        <div class="price-details">
                            <div class="price-number">
                                <p><span class="rupees">$@item.Gia</span></p>
                            </div>
                            <div class="add-cart">
                                <h4><a href="preview.html">Add to Cart</a></h4>
                                <h4><a asp-action="Delete" asp-route-id="@item.MaHang">Xóa</a></h4>
                                <h4><a asp-action="Edit" asp-route-id="@item.MaHang">Sửa</a></h4>
                            </div>
                            <div class="clear"></div>
                        </div>
                    </div>
                }
            }
        </div>
        <!-- End New Product -->
        <!-- Begin Feature Products -->
        <div class="content_bottom">
            <div class="heading">
                <h3>Feature Products</h3>
            </div>
            <div class="see">
                <p><a href="#">See all Products</a></p>
            </div>
            <div class="clear"></div>
        </div>
        <div class="section group">
        </div>
        <!-- End Feature Products -->
    </div>
</div>